#include <iostream>
#include <vector>
#include <queue>
#include <stack>
#include <climits>
#include <cstring>
using namespace std;

class Graph {
private:
    int vertexNum;
    vector<string> vertex;
    vector<vector<int>> adjMatrix;

    int* disc;
    int* low;
    bool* visited;
    bool* isArticulation;
    int time;
    stack<pair<int, int>> edgeStack;

    int findVertexIndex(const string& v) {
        for (int i = 0; i < vertexNum; i++) {
            if (vertex[i] == v) return i;
        }
        return -1;
    }

    void dfsRecursive(int v, vector<bool>& visited) {
        visited[v] = true;
        cout << vertex[v] << " ";
        for (int i = 0; i < vertexNum; i++) {
            if (adjMatrix[v][i] != 0 && !visited[i]) {
                dfsRecursive(i, visited);
            }
        }
    }

    void tarjan(int u, int parent) {
        int children = 0;
        visited[u] = true;
        disc[u] = low[u] = ++time;

        for (int v = 0; v < vertexNum; v++) {
            if (adjMatrix[u][v] == 0) continue;

            if (!visited[v]) {
                children++;
                edgeStack.push({u, v});
                tarjan(v, u);

                low[u] = min(low[u], low[v]);

                if (parent == -1 && children > 1) {
                    isArticulation[u] = true;
                    cout << "双连通分量: ";
                    while (edgeStack.top() != make_pair(u, v)) {
                        cout << "(" << vertex[edgeStack.top().first] << ","
                             << vertex[edgeStack.top().second] << ") ";
                        edgeStack.pop();
                    }
                    cout << "(" << vertex[u] << "," << vertex[v] << ")\n";
                    edgeStack.pop();
                }

                if (parent != -1 && low[v] >= disc[u]) {
                    isArticulation[u] = true;
                    cout << "双连通分量: ";
                    while (edgeStack.top() != make_pair(u, v)) {
                        cout << "(" << vertex[edgeStack.top().first] << ","
                             << vertex[edgeStack.top().second] << ") ";
                        edgeStack.pop();
                    }
                    cout << "(" << vertex[u] << "," << vertex[v] << ")\n";
                    edgeStack.pop();
                }
            }
            else if (v != parent && disc[v] < disc[u]) {
                edgeStack.push({u, v});
                low[u] = min(low[u], disc[v]);
            }
        }
    }

public:
    Graph(const vector<string>& vertices) {
        vertexNum = vertices.size();
        vertex = vertices;
        adjMatrix.resize(vertexNum, vector<int>(vertexNum, 0));
    }

    void addEdge(const string& u, const string& v, int weight) {
        int uIdx = findVertexIndex(u);
        int vIdx = findVertexIndex(v);
        if (uIdx != -1 && vIdx != -1) {
            adjMatrix[uIdx][vIdx] = weight;
            adjMatrix[vIdx][uIdx] = weight;
        }
    }

    void printAdjMatrix() {
        cout << "邻接矩阵:\n";
        cout << "   ";
        for (const string& v : vertex) {
            cout << v << "  ";
        }
        cout << "\n";
        for (int i = 0; i < vertexNum; i++) {
            cout << vertex[i] << "  ";
            for (int j = 0; j < vertexNum; j++) {
                cout << adjMatrix[i][j] << "  ";
            }
            cout << "\n";
        }
    }

    void BFS(const string& s) {
        int start = findVertexIndex(s);
        if (start == -1) {
            cout << "起点不存在！\n";
            return;
        }
        vector<bool> visited(vertexNum, false);
        queue<int> q;

        visited[start] = true;
        q.push(start);
        cout << "BFS(" << s << "): ";

        while (!q.empty()) {
            int u = q.front();
            q.pop();
            cout << vertex[u] << " ";

            for (int v = 0; v < vertexNum; v++) {
                if (adjMatrix[u][v] != 0 && !visited[v]) {
                    visited[v] = true;
                    q.push(v);
                }
            }
        }
        cout << "\n";
    }

    void DFS(const string& s) {
        int start = findVertexIndex(s);
        if (start == -1) {
            cout << "起点不存在！\n";
            return;
        }
        vector<bool> visited(vertexNum, false);
        cout << "DFS(" << s << "): ";
        dfsRecursive(start, visited);
        cout << "\n";
    }

    void Dijkstra(const string& s) {
        int start = findVertexIndex(s);
        if (start == -1) {
            cout << "起点不存在！\n";
            return;
        }

        vector<int> dist(vertexNum, INT_MAX);
        vector<bool> visited(vertexNum, false);

        dist[start] = 0;

        for (int i = 0; i < vertexNum - 1; i++) {
            int minDist = INT_MAX, u = -1;
            for (int v = 0; v < vertexNum; v++) {
                if (!visited[v] && dist[v] < minDist) {
                    minDist = dist[v];
                    u = v;
                }
            }

            if (u == -1) break;
            visited[u] = true;

            for (int v = 0; v < vertexNum; v++) {
                if (!visited[v] && adjMatrix[u][v] != 0 &&
                    dist[u] != INT_MAX && dist[u] + adjMatrix[u][v] < dist[v]) {
                    dist[v] = dist[u] + adjMatrix[u][v];
                }
            }
        }

        cout << "Dijkstra最短路径（起点" << s << "）:\n";
        for (int i = 0; i < vertexNum; i++) {
            if (dist[i] == INT_MAX) {
                cout << s << "->" << vertex[i] << ": 不可达\n";
            } else {
                cout << s << "->" << vertex[i] << ": " << dist[i] << "\n";
            }
        }
    }

    void Prim(const string& s) {
        int start = findVertexIndex(s);
        if (start == -1) {
            cout << "起点不存在！\n";
            return;
        }

        vector<int> key(vertexNum, INT_MAX);
        vector<int> parent(vertexNum, -1);
        vector<bool> inMST(vertexNum, false);

        key[start] = 0;

        for (int i = 0; i < vertexNum - 1; i++) {
            int minKey = INT_MAX, u = -1;
            for (int v = 0; v < vertexNum; v++) {
                if (!inMST[v] && key[v] < minKey) {
                    minKey = key[v];
                    u = v;
                }
            }

            if (u == -1) break;
            inMST[u] = true;

            for (int v = 0; v < vertexNum; v++) {
                if (!inMST[v] && adjMatrix[u][v] != 0 && adjMatrix[u][v] < key[v]) {
                    parent[v] = u;
                    key[v] = adjMatrix[u][v];
                }
            }
        }

        cout << "Prim最小支撑树（起点" << s << "）:\n";
        int totalWeight = 0;
        for (int i = 0; i < vertexNum; i++) {
            if (parent[i] != -1) {
                cout << vertex[parent[i]] << "-" << vertex[i] << " (权值:" << adjMatrix[parent[i]][i] << ")\n";
                totalWeight += adjMatrix[parent[i]][i];
            }
        }
        cout << "MST总权值: " << totalWeight << "\n";
    }

    void findBiconnectedComponents() {
        disc = new int[vertexNum];
        low = new int[vertexNum];
        visited = new bool[vertexNum];
        isArticulation = new bool[vertexNum];
        memset(disc, 0, sizeof(int)*vertexNum);
        memset(low, 0, sizeof(int)*vertexNum);
        memset(visited, false, sizeof(bool)*vertexNum);
        memset(isArticulation, false, sizeof(bool)*vertexNum);
        time = 0;

        cout << "双连通分量与关节点:\n";
        for (int i = 0; i < vertexNum; i++) {
            if (!visited[i]) {
                tarjan(i, -1);
                if (!edgeStack.empty()) {
                    cout << "双连通分量: ";
                    while (!edgeStack.empty()) {
                        cout << "(" << vertex[edgeStack.top().first] << ","
                             << vertex[edgeStack.top().second] << ") ";
                        edgeStack.pop();
                    }
                    cout << "\n";
                }
            }
        }

        cout << "关节点: ";
        bool hasArticulation = false;
        for (int i = 0; i < vertexNum; i++) {
            if (isArticulation[i]) {
                cout << vertex[i] << " ";
                hasArticulation = true;
            }
        }
        if (!hasArticulation) cout << "无";
        cout << "\n";

        delete[] disc;
        delete[] low;
        delete[] visited;
        delete[] isArticulation;
    }
};

Graph buildGraph1() {
    vector<string> vertices = {"A","B","C","D","E","F","G","H","I","J"};
    Graph g(vertices);

    g.addEdge("A","B",2);
    g.addEdge("A","I",10);
    g.addEdge("B","C",3);
    g.addEdge("B","E",12);
    g.addEdge("B","F",9);
    g.addEdge("C","H",1);
    g.addEdge("D","E",13);
    g.addEdge("D","F",4);
    g.addEdge("E","F",1);
    g.addEdge("E","H",5);
    g.addEdge("F","G",11);
    g.addEdge("G","H",14);
    g.addEdge("H","J",8);
    g.addEdge("I","J",2);

    return g;
}

Graph buildGraph2() {
    vector<string> vertices = {"A","B","C","D","E","F","G","H","I","J","K","L"};
    Graph g(vertices);

    g.addEdge("A","B",1);
    g.addEdge("B","C",1);
    g.addEdge("C","D",1);
    g.addEdge("D","E",1);
    g.addEdge("E","F",1);
    g.addEdge("G","H",1);
    g.addEdge("H","I",1);
    g.addEdge("I","J",1);
    g.addEdge("J","K",1);
    g.addEdge("K","L",1);
    g.addEdge("A","G",1);
    g.addEdge("B","H",1);
    g.addEdge("C","I",1);
    g.addEdge("D","J",1);
    g.addEdge("E","K",1);
    g.addEdge("F","L",1);

    return g;
}

int main() {
    Graph g1 = buildGraph1();
    cout << "==================== 图1实验 ====================\n";
    g1.printAdjMatrix();
    cout << "\n";

    g1.BFS("A");
    g1.DFS("A");
    cout << "\n";

    g1.Dijkstra("A");
    cout << "\n";
    g1.Prim("A");
    cout << "\n";

    Graph g2 = buildGraph2();
    cout << "==================== 图2实验 ====================\n";
    cout << "=== 从起点A计算 ===" << endl;
    g2.findBiconnectedComponents();
    cout << "\n=== 从起点G计算 ===" << endl;
    g2.findBiconnectedComponents();

    return 0;
}
