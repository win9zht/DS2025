CREATE DATABASE library_db;
USE library_db;

CREATE TABLE IF NOT EXISTS users (
    id INT PRIMARY KEY AUTO_INCREMENT,
    username VARCHAR(50),
    password VARCHAR(50)
);

CREATE TABLE IF NOT EXISTS books (
    id INT PRIMARY KEY AUTO_INCREMENT,
    title VARCHAR(100),
    author VARCHAR(100),
    UNIQUE KEY unique_book (title, author)
);

INSERT INTO users(username, password)
VALUES ('admin', '123456');

#查询图书列表
SELECT * FROM books
#修改管理员账号密码
UPDATE users
SET username = 'admin',
    password = '888888'
WHERE id = 1;
#验证账号密码
SELECT * FROM users;
#新增管理员
